                focused_workspace  #557FAC #557FAC #ffffff
        ##	active_workspace   #333333 #656C61 #ffffff
        ##	inactive_workspace #333333 #222222 #888888
        ##	urgent_workspace   #313B30 #900000 #ffffff
        }
}

# pulseaudio volue control
bindsym $mod+F12 exec pactl set-sink-volume 0 +5%
bindsym $mod+F11 exec pactl set-sink-volume 0 -- -5%
bindsym $mod+F10 exec pactl set-sink-mute 0 true
bindsym $mod+F9 exec pactl set-sink-mute 0 false

# multimonitor settings

workspace 1 output VGA1
workspace 2 output VGA1
workspace 3 output VGA1
workspace 4 output VGA1
workspace 5 output VGA1
workspace 6 output LVDS1
workspace 7 output VGA1
workspace 8 output VGA1
workspace 9 output VGA1
workspace 10 output VGA1

#bindsym $mod+F8 exec --no-startup-id xrandr --output VGA1 --auto --above LVDS1 && xrandr --output VGA1 --mode 1920x1080 --primary
bindsym $mod+F8 exec --no-startup-id xrandr --output HDMI1 --auto --above LVDS1 && xrandr --output VGA1 --mode 1920x1080 --primary
bindsym $mod+F7 exec --no-startup-id xrandr --output LVDS1 --off
bindsym $mod+F6 exec --no-startup-id xrandr --output LVDS1 --auto

# startup programs
## exec [--no-startup-id] command
## exec_always [--no-startup-id] command
exec --no-startup-id xrdb -merge ~/.Xresources
exec --no-startup-id dunst
exec --no-startup-id dropboxd
exec --no-startup-id dropbox start
exec --no-startup-id keychain --agents ssh,gpg id_rsa
exec --no-startup-id /usr/bin/rxvt-unicode
#exec --no-startup-id pulseaudio --start
exec --no-startup-id setxkbmap pl # pl keyboard mapping

# widow specific
# run _xprop_ to get windows properties
# * **title**: Compares the X11 window title (_NET_WM_NAME or WM_NAME as fallback).
# * **window_role**: Compares the window role (WM_WINDOW_ROLE).
for_window [class="Pidgin" window_role="buddy_list"] floating enable
for_window [class="Pidgin"] move to workspace 10
for_window [class="Keepassx"] floating enable

### scratchpad

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# To get the class and instance, you can use xprop.
# http://i3wm.org/docs/userguide.html#command_criteria
bindsym $mod+p [class="Keepassx"] scratchpad show
for_window [window_role="pop-up" title="@gmail.com"] move to scratch
bindsym $mod+i [window_role="pop-up" title="imo"] scratchpad show
bindsym $mod+m [window_role="pop-up" title="@gmail.com"] scratchpad show
