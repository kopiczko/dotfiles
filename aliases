#!/bin/bash

for f in $(find ~/.aliases.d/ -type f); do
    source $f
done

alias vi='nvim'

# From bash's help alias:
#
# A trailing space in VALUE causes the next word to be checked for alias
# substitution when the alias is expanded.
alias watch='watch --color '

alias ll='ls -ls --group-directories-first'
alias pp='vim ~/vimwiki/passwords.wiki'

alias cp='cp -a'
alias rsync='rsync -a'

alias ccd='cd `xsel -b`'
alias cpwd='echo `pwd` | xsel -ib'

alias aliases='vi ~/.aliases'
alias envs='vi ~/.envs'
