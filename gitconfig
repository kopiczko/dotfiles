[user]
	name = Pawe≈Ç Kopiczko
  email = kopiczko@gmail.com
[core]
	excludesfile = /Users/pawel/.gitignore_global
	editor = vim
	pager = less -+F
[alias]
  b = branch
  c = commit
  ca = commit --amend 	
  clean-branches = !git branch | grep -v master | xargs git branch -D
  cleanup = !git remote prune origin && git gc && git clean -df && git stash clear
  co = checkout
  d = diff
  dc = diff --cached
  dcw = diff --cached -w
  dw = diff -w
  dwc = diff --cached -w
  lg = log --graph --pretty=format:'%Cred%h%Creset %Cgreen%cn%Creset %C(yellow)%d%Creset %s %Cgreen%cr%Creset' --abbrev-commit --date=relative
  s = status -uall
  ss = stash save
[push]
  default = current
[color]
  diff = auto
  status = auto
  branch = auto
[github]
  user = kopiczko
[init]
  templatedir = ~/.git_template
[difftool]
  prompt = true
[diff]
  tool = nvimdiff
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
