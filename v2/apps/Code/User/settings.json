{
    // zoom
    "window.zoomLevel": 0.8,
    "editor.fontSize": 13,
    "terminal.integrated.fontSize": 13,
    "editor.tabSize": 8,
    "workbench.tree.indent": 20,
    // title bar
    "window.titleBarStyle": "native",
    "window.title": "${rootName}${separator}${activeRepositoryName} (${activeRepositoryBranchName})",
    "window.titleSeparator": " â€¢ ",
    "chat.commandCenter.enabled": false,
    // ruler and minimap
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "off",
    "git.suggestSmartCommit": false,
    "scm.countBadge": "off",
    // colors
    "window.autoDetectColorScheme": true,
    "workbench.colorTheme": "GitHub Light",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "workbench.preferredDarkColorTheme": "GitHub Dark",
    "workbench.preferredHighContrastColorTheme": "GitHub Dark High Contrast",
    "workbench.preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
    // vim
    "vim.textwidth": 99,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "red",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<enter>"],
            "commands": [":nohl"],
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showDefinitionPreviewHover"],
            "silent": true
        },
    ],
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1,
        "asvetliakov.vscode-neovim": 1,
    },
    // cspell
    "cSpell.ignoreWords": [
        "scim",
        "ssws",
        "subkind",
        "pawel",
        "gogoproto",
        "jsontag",
        "textwidth",
    ],
    "cSpell.userWords": [
        "kopiczko"
    ],
    "cSpell.checkVSCodeSystemFiles": true,
    "cSpell.enabledFileTypes": {
        "plaintext": true
    },
    "cSpell.useCustomDecorations": true,
    "cSpell.overviewRulerColor": "",
    "cSpell.textDecorationStyle": "dotted",  // asdferror (sample)
    "cSpell.textDecorationColor": "#FF69B4",
    "cSpell.trustedWorkspace": false,
    "cSpell.import": [
        "./.vscode/cspell.packages.yaml",
        "./.vscode/cspell.general.yaml",
    ],
    "workbench.startupEditor": "none",
    "search.exclude": {
        "**/*.code-search": false
    },
    "terminal.integrated.commandsToSkipShell": [
        "workbench.actions.view.problems"
    ],
    "workbench.activityBar.location": "top",
    "window.customTitleBarVisibility": "never",
    "task.allowAutomaticTasks": "off",
    "window.nativeTabs": true,
    "editor.mouseWheelScrollSensitivity": 0.5,
    "window.newWindowDimensions": "maximized",
    "editor.wordWrap": "off",
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.enablePreview": false,
    "outline.showFields": false,
    "window.openFoldersInNewWindow": "on",
    "files.insertFinalNewline": true,
    "git.blame.editorDecoration.enabled": true,
    "files.associations": {
        "*.mdx": "markdown",
    },
    "terminal.integrated.suggest.enabled": true,
}
