{
    "diffEditor.renderSideBySide": false,
    "editor.minimap.enabled": false,
    "explorer.decorations.colors": false,
    "workbench.editor.showIcons": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.tree.indent": 20,
    "explorer.decorations.badges": false,
    "workbench.colorTheme": "Default Light Modern",
    "workbench.preferredLightColorTheme": "GitHub Light Default",
    "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",

    "editor.fontSize": 13,
    "editor.fontFamily": "NotoSansM Nerd Font Mono",
    "terminal.integrated.fontFamily": "NotoSansM Nerd Font Mono",
    "terminal.integrated.customGlyphs": false,
    "terminal.integrated.fontSize": 13,

    // Restoring terminal history.
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,

    "extensions.ignoreRecommendations": true,

    "cSpell.language": "en,en-GB,en-US,pl",
    "files.eol": "\n",
    "files.insertFinalNewline": true,

    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": false,
    "vim.handleKeys": {
        "<C-[>": true,
        "<C-]>": true,
        "<C-r>": true,
        "<C-i>": true,
        "<C-o>": true,
        "<C-v>": true,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<Enter>"], "commands": [ ":nohl", ], "silent": true },
        { "before": [ "j" ], "after": [ "g", "j" ] },
        { "before": [ "k" ], "after": [ "g", "k" ] },
    ],
    "vim.commandLineModeKeyBindingsNonRecursive": [
        { "before": [ "q", "<cr>" ], "commands": [ "workbench.action.joinTwoGroups" ] },
    ],
    "diffEditor.codeLens": true,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "workbench.iconTheme": "chalice-icon-theme",
    "editor.wordWrap": "on",
    "workbench.editor.showTabs": "single",
   "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.localEchoExcludePrograms": [
        "vim",
        "vi",
        "nano",
        "tmux",
        "nvim"
    ],
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.createTerminalEditor",
        "workbench.action.focusAboveGroup",
        "workbench.action.focusBelowGroup",
        "workbench.action.focusLeftGroup",
        "workbench.action.focusRightGroup",
        "workbench.action.moveEditorToAboveGroup",
        "workbench.action.moveEditorToBelowGroup",
        "workbench.action.moveEditorToLeftGroup",
        "workbench.action.moveEditorToRightGroup",
        "workbench.action.toggleActivityBarVisibility",
        "workbench.action.toggleMaximizeEditorGroup",
        "workbench.action.toggleSidebarVisibility",
    ],
    "cSpell.userWords": [
        "accesskey",
        "apimachinery",
        "apiserver",
        "appautoscaling",
        "automount",
        "autoscaler",
        "azurecr",
        "blackbox",
        "bootstrappers",
        "chdir",
        "cidrsubnet",
        "clusterissuer",
        "containerd",
        "creds",
        "daemonset",
        "DNAT",
        "downscaler",
        "dualstack",
        "eksctl",
        "fargate",
        "finalizer",
        "genericclioptions",
        "giantswarm",
        "giantswarmpublic",
        "helloworld",
        "hlsearch",
        "hostedzone",
        "jsonencode",
        "Karpenter",
        "kopiczko",
        "kubeconfig",
        "kubeconfigs",
        "kubelet",
        "kubeproxy",
        "Kustomization",
        "kustomize",
        "letsencrypt",
        "libsodium",
        "lpass",
        "mylabel",
        "natgw",
        "Netpol",
        "nodegroup",
        "nodepool",
        "nohl",
        "nvim",
        "oidc",
        "pawel",
        "paweltest",
        "pflag",
        "podsecuritypolicies",
        "relref",
        "rolearn",
        "secretaccesskey",
        "serviceaccount",
        "servicemonitor",
        "servicemonitors",
        "subchart",
        "tekton",
        "TMPDIR",
        "todos",
        "tolist",
        "tomap",
        "upsert",
        "userarn",
        "waitfor",
        "xlarge"
    ],
    "terminal.integrated.gpuAcceleration": "on",
    "cSpell.enableFiletypes": [
        "terraform",
        "terraform-vars"
    ],
    "git.openRepositoryInParentFolders": "never",
    "workbench.startupEditor": "none",
    "window.menuBarVisibility": "toggle",
    "window.title": "${dirty}${rootNameShort}${separator}${activeEditorMedium}",
    "window.titleSeparator": " Â· ",
    "terminal.integrated.tabs.title": "${workspaceFolder}",
    "workbench.layoutControl.type": "menu",
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "editor.tabSize": 8,
    "window.titleBarStyle": "native",
    "workbench.editor.editorActionsLocation": "hidden",
    "terminal.integrated.tabs.location": "right",
    "search.quickOpen.includeHistory": false,
    "workbench.activityBar.location": "hidden",
    "clock.alignment": "Right",
}
